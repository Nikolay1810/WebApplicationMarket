
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ScondLayout.cshtml";
}

 <!-- jQuery -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script src="~/Scripts/Core/core.js"></script>
<script src="~/Scripts/Role/CreateRole.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 id="pageTitle">Добавить роль</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Название роли</label>
                <div class="col-md-10">
                    <input type="text" id="roleName" name="text" class="form-control  text-danger" />
                </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p id="messFirstName" style="height:30px; color:red; display:none;"></p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" name="create" id="buttonEdit" class="btn btn-default" value="Добавить" />
            </div>
        </div>

    </div>
}

<div>
    <a href="/Role/ListRoles">Назад</a>
</div>
